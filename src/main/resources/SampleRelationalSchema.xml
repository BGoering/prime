<?xml version="1.0" encoding="UTF-8"?>

<relational-schema name="tx_travis" version="1.0">

    <view class="com.realcomp.data.view.tx.travis.TravisPersonView.class"/>

    <table name="prop">
        <key name="prop_id"/>
        
        <table name="imp_info">            
            <foreign name="prop_id"/>
            <key name="imprv_id"/>

            <table name="imp_det">
                <foreign name="prop_id"/>
                <foreign name="imprv_id"/>
                <key name="imprv_det_id"/>

                <table name="imp_atr">
                    <foreign name="prop_id"/>
                    <foreign name="imprv_id"/>
                    <foreign name="imprv_det_id"/>
                    <key name="imprv_attr_id"/>
                </table>
            </table>
        </table>

        <table name="land_det">
            <foreign name="prop_id"/>
            <key name="land_seg_id"/>
        </table>

        <table name="prop_ent">
            <foreign name="prop_id"/>
            <foreign name="prop_val_yr"/>
            <key name="entity_id"/>
        </table>
    </table>
</relational-schema>
